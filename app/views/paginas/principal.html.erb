<div class="page-header text-center">
    <h3>Livros em destaque</h3>
</div>
<div class="row">
    <div class="content">
        <% @livros.each do |livro| %>
        <div class="col-xs-6 col-sm-3 col-md-2 col-lg-2">
            <div class="panel panel-default">
                <%= link_to livro_path(livro.slug) do %>
                <div class="panel-thumbnail">
                    <%= image_tag livro.capa_url, class: "img-responsive" %>
                </div>
                <div class="panel-body" style="min-height: 180px">
                    <p><%= livro.titulo %></p>
                    <p>
                        <small>
                            <%= livro.categoria.nome %><br>
                            <%= livro.editora.nome %>
                        </small>
                    </p>
                </div>
                <% end %>
            </div>
        </div>
        <% end %>
    </div>
</div>