<%= nav_bar fixed: :'static-top', brand: "Livraria Ruby", responsive: true do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_item "Livros", livros_path  %>
    <% end %>
    
    <%= menu_group pull: :right do %>
          <% if user_signed_in? %>
            <%= menu_item "Logout", destroy_user_session_path, method: :delete  %>
          <% else %>
            <%= menu_item "Logar", new_user_session_path  %>
          <% end %>
    <% end %>
<% end %>